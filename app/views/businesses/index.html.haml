-if logged_in?
  =render 'shared/nav'
%main.businesses
  =link_to '+ Add New Business', '#', {class: 'btn btn-outline-danger'}
  %p
    Showing 1 to 5 of #{@count}
  %ul
    -@businesses.each do |business|
      %li
        %header
          %h2
            =link_to business.name, business_path(business)
            -if logged_in?
              =link_to 'Write A Review', '#', {class: 'btn btn-danger', id: review-link}
              =fa_icon 'star'
          %section
            %div.rating
              %div.rating-box
                %div.rating{ style: 'width: 50%' }
              %span
                5 reviews
              %div.tags
                -if business.price
                  =create_price_tag(business.price)
                  %span.middot &middot
                -if business.tags
                  -tags = create_tags(business.tags)
                  -tags.each_with_index do |tag, index|
                    =link_to tag, '#'
                    -if index < tags.length - 1
                      %span.middot &middot
            -if business.description.length > 250
              %p.truncated
                =truncate_text(business.description, 220)
                =link_to 'Read More', nil, {class: 'full-text-link'}
              %p.full-text
                #{business.description}
                =link_to 'Read Less', nil, {class: 'show-less-link'}
            -else
              %p
                =business.description
        %aside.meta
          %ul
            %li
              =format_phone(business.phone)
            %li
              =business.city.capitalize
            %li
              =business.state.capitalize
  %nav{aria: {label: 'pagination'}}
    %ul.pagination
      %li.page-item.disabled
        %a.page-link{href: '#', aria: {label: 'Previous'}}
          %span{ aria: {hidden: true}} &laquo;
          %span.sr-only Previous
      -(@count / 5.0).ceil.times do |num|
        %li.page-item
          =link_to "#{num + 1}", businesses_path(page: "#{num + 1}"), {class: 'page-link'}
      %li.page-item
        %a.page-link{href: '#', aria: {label: 'Next'}}
          %span{aria: {hidden: true}} &raquo;
          %span.sr-only Next
=render 'shared/footer'
