-if logged_in?
  =render 'shared/nav'
-else
  =render 'shared/generic_nav'
%main.businesses
  %secion.clearfix
    -if logged_in?
      =link_to '+ Add New Business', '#', {class: 'btn btn-outline-danger'}
    -if @count != 0
      %p
        Showing #{calculate_start_count(@count, @current_page)} to #{calculate_end_count(@count, @current_page)} of #{@count}
  -if @count != 0
    %ul
      -@businesses.each do |business|
        %li
          %header
            %h2
              =link_to business.name.titleize, business_path(business)
              -if logged_in?
                =link_to '#', {class: 'btn btn-danger review-link'} do
                  =fa_icon 'star'
                  Write A Review
            %section
              %div.rating
                %div.rating-box
                  %div.rating{ style: 'width: 50%' }
                %span
                  5 reviews
                %div.tags
                  -if business.price
                    =create_price_tag(business.price)
                    %span.middot &middot
                  -if business.tags
                    -tags = create_tags(business.tags)
                    -tags.each_with_index do |tag, index|
                      =link_to tag, '#'
                      -if index < tags.length - 1
                        %span.middot &middot
              -if business.description.length > 250
                %p.truncated
                  =truncate_text(business.description, 220)
                  =link_to 'Read More', nil, {class: 'full-text-link'}
                %p.full-text
                  #{business.description}
                  =link_to 'Read Less', nil, {class: 'show-less-link'}
              -else
                %p
                  =business.description
          %aside.meta
            %ul
              %li
                =format_phone(business.phone)
              %li
                =business.city.capitalize
              %li
                =business.state.capitalize
    %nav{aria: {label: 'pagination'}}
      %ul.pagination
        %li{class: pagination_arrow_class(@current_page, @count, 'prev')}
          =link_to businesses_path(page: "#{@current_page.to_i - 1}"), class: 'page-link', aria: {label: 'Previous'} do
            %span{ aria: {hidden: true}} &laquo;
            %span.sr-only Previous
        -(@count / 5.0).ceil.times do |num|
          %li{class: page_item_class(@current_page, num + 1)}
            =link_to "#{num + 1}", businesses_path(page: "#{num + 1}"), {class: 'page-link'}
        %li{class: pagination_arrow_class(@current_page, @count, 'next')}
          =link_to businesses_path(page: "#{@current_page.to_i + 1}"), class: 'page-link', aria: {label: 'Next'} do
            %span{aria: {hidden: true}} &raquo;
            %span.sr-only Next
  -else
    =render 'shared/empty_content'
=render 'shared/footer'
